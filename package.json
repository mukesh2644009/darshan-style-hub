{
  "name": "darshan-style-hub",
  "version": "1.0.0",
  "description": "E-commerce app for Darshan Style Hub - Sarees & Suits in Jaipur",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:domain": "next dev -H darshanclothsjaipur.com",
    "build": "prisma generate && next build",
    "postinstall": "prisma generate",
    "start": "next start",
    "lint": "next lint",
    "db:seed": "npx ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts",
    "db:push": "npx prisma db push",
    "db:studio": "npx prisma studio",
    "setup:domain": "chmod +x scripts/setup-domain.sh && ./scripts/setup-domain.sh"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "next": "14.0.4",
    "prisma": "^5.22.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.12.0",
    "resend": "^6.6.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
